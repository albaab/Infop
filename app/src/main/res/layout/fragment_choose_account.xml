<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.infopapp.activities.fragments.ChooseAccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="30sp"
        android:padding="2dp">

        <ImageView
            android:id="@+id/rect_student"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginStart="19dp"
            android:src="@drawable/rect"
            android:layout_marginLeft="10dp"
            />


        <ImageView
            android:id="@+id/talent_image"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginStart="19dp"
            android:src="@drawable/talent"
            android:layout_marginLeft="19dp" />

        <ImageView
            android:id="@+id/staff_rect"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/rect_student"
            android:src="@drawable/rect"
            />

        <ImageView
            android:id="@+id/staff_image"
            android:layout_width="127dp"
            android:layout_height="144dp"
            android:layout_alignRight="@id/talent_image"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="-138dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/staff_edacy" />

        <ImageView
            android:id="@+id/instructor_rect"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginStart="19dp"
            android:layout_alignBottom="@+id/talent_image"
            android:layout_marginBottom="-206dp"
            android:src="@drawable/rect"
            android:layout_marginLeft="19dp" />

        <ImageView
            android:id="@+id/instructor_image"
            android:layout_width="142dp"
            android:layout_height="147dp"
            android:layout_alignBottom="@+id/talent_image"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginBottom="-209dp"
            android:src="@drawable/instructor" />


        <ImageView
            android:id="@+id/other_rect"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_alignRight="@+id/staff_image"
            android:layout_alignBottom="@+id/talent_image"
            android:layout_marginRight="-22dp"
            android:layout_marginBottom="-204dp"
            android:src="@drawable/rect" />

        <ImageView
            android:id="@+id/other_image"
            android:layout_width="134dp"
            android:layout_height="131dp"
            android:layout_alignRight="@+id/staff_image"
            android:layout_alignBottom="@+id/talent_image"
            android:layout_marginRight="-10dp"
            android:layout_marginBottom="-195dp"
            android:src="@drawable/ic_instructor" />


    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="116dp"
            android:layout_marginBottom="172dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Student"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="154dp"
            android:layout_height="36dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="172dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Instructor"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="154dp"
            android:layout_height="36dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="172dp"
            android:layout_marginEnd="43dp"
            android:layout_marginRight="43dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Other"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="119dp"
            android:layout_height="37dp"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="63dp"
            android:layout_marginRight="63dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Staff"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="219dp"
            android:layout_height="63dp"
            android:layout_marginStart="103dp"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text="@string/ChooseAccount"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>



</FrameLayout>