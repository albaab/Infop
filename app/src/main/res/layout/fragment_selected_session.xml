<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:layout_gravity="center|top"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.sessions.fragments.SelectedSessionFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <!--Session Title + image + date + hour-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/image_gradient"
                app:elevation="10dp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="10dp">


                <TextView
                    android:id="@+id/session_view_title"
                    android:layout_width="300dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@android:color/black"
                    android:gravity="center"
                    android:text="@string/title_fragment_sessions"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/session_view_image"
                    app:layout_constraintEnd_toEndOf="@+id/session_view_image"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/session_view_image" />

                <ImageView
                    android:id="@+id/session_view_image"
                    android:layout_width="300dp"
                    android:layout_height="96dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/watch_icon"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:contentDescription="@string/hour_text"
                    android:src="@drawable/ic_watch"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/session_title" />

                <TextView
                    android:id="@+id/session_view_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/gradient"
                    android:gravity="center"
                    android:text="@string/hour_text"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/watch_icon" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Description-->
            <LinearLayout
                android:id="@+id/description_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:paddingBottom="10dp"
                android:background="@drawable/rect_outline"
                android:orientation="vertical">

                <TextView

                    android:layout_width="293dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="7dp"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:paddingRight="2dp"
                    android:text="@string/description"
                    android:textColor="@android:color/black"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="164dp"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:paddingEnd="2dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/description_text_view"
                    android:visibility="gone"
                    android:background="@drawable/text_field_gray"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="7dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:textSize="12sp"
                    android:text="@string/description"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="164dp"
                    android:layout_marginLeft="12dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="7dp" />

            </LinearLayout>

            <!--Homework-->
            <LinearLayout
                android:id="@+id/homework_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_outline"
                android:orientation="vertical">

                <TextView
                    android:layout_width="293dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="7dp"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:paddingRight="2dp"
                    android:text="@string/homework"
                    android:textColor="@android:color/black"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="164dp"
                    android:drawableEnd="@drawable/ic_arrow_down" />

                <TextView

                    android:id="@+id/homework_text_view"
                    android:visibility="gone"
                    android:background="@drawable/text_field_gray"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="2dp"
                    android:textSize="12sp"
                    android:text="@string/homework"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="164dp"
                    android:layout_marginLeft="12dp" />

            </LinearLayout>

            <!--Resources-->
            <LinearLayout
                android:id="@+id/resources_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_outline"
                android:orientation="vertical">

                <TextView

                    android:layout_width="293dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="7dp"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:paddingRight="2dp"
                    android:text="@string/resources"
                    android:textColor="@android:color/black"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="164dp" />

                <TextView

                    android:id="@+id/resources_text_view"
                    android:visibility="gone"
                    android:background="@drawable/text_field_gray"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="2dp"
                    android:textSize="12sp"
                    android:text="@string/resources"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="164dp"
                    android:layout_marginLeft="12dp" />

            </LinearLayout>

            <!--Feedbacks-->
            <LinearLayout
                android:id="@+id/feedback_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_outline"
                android:orientation="vertical">

                <TextView

                    android:layout_width="293dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="7dp"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:paddingRight="2dp"
                    android:text="@string/feedbacks"
                    android:textColor="@android:color/black"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="164dp" />

                <TextView

                    android:id="@+id/feedback_text_view"
                    android:visibility="gone"
                    android:background="@drawable/text_field_gray"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="2dp"
                    android:textSize="12sp"
                    android:text="@string/feedbacks"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="164dp"
                    android:layout_marginLeft="12dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</FrameLayout>